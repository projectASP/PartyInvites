@model PartyInvitesSheilferZepeda.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
</head>
<body>
    @{

        try {
            WebMail.SmtpServer = "smtp.gmail.com";
            WebMail.SmtpPort = 587;
            WebMail.EnableSsl = true;
            WebMail.UserName = "aspgroupproject";
            WebMail.Password = "sotakproject";
            WebMail.From = "aspgroupproject@gmail.com";
            WebMail.Send(@Model.Email, "RSVP Notification", Model.Name + " is " + ((Model.WillAttend ?? false) ? "" : "not ") + "attending");
        } catch (Exception)
        {
            @:<b>Sorry - we couldn't send the email to confirm your RSVP.</b>      
            //This will display if the field is left empty but otherwise will not, probably due to the lack of validation
            
        }
      }
            <div>
                <h1>Thank you, @Model.Name!</h1>
                @if (Model.WillAttend == true)
                {
                    @:It's great that you're coming. Stay hydrated!
                }
                else
                {
                    @:Sorry to hear that you can't make it, but thanks for letting us know
                }
            </div>
        </body>
</html>
